{
  "description": "GURPS Game Aid",
  "devDependencies": {
    "@babel/core": "^7.26.0",
    "@babel/preset-env": "^7.26.0",
    "@jridgewell/trace-mapping": "^0.3.31",
    "@types/jest": "^30.0.0",
    "@types/jquery": "^3.5.32",
    "@types/node": "^22.14.1",
    "autoprefixer": "^10.4.21",
    "babel-jest": "^30.2.0",
    "cpx2": "^8.0.0",
    "eslint": "^9.0.0",
    "eslint-config-prettier": "^10.1.8",
    "eslint-plugin-import": "^2.32.0",
    "fvtt-types": "github:League-of-Foundry-Developers/foundry-vtt-types#main",
    "handlebars": "^4.7.7",
    "husky": "^9.1.7",
    "jest": "^30.2.0",
    "npm-run-all2": "^7.0.2",
    "prettier": "^3.5.3",
    "purgecss": "^7.0.2",
    "rimraf": "^6.0.1",
    "sass": "^1.97.1",
    "source-map-support": "^0.5.21",
    "ts-jest": "^29.3.4",
    "tsc-alias": "^1.8.16",
    "tsc-watch": "^7.2.0",
    "typescript": "^5.8.3",
    "typescript-eslint": "^8.50.0",
    "v8-to-istanbul": "^9.3.0"
  },
  "name": "gurps",
  "overrides": {
    "fvtt-types": {
      "tinymce": "8.3.1"
    }
  },
  "scripts": {
    "build": "npm run clean && npm run build:code && npm run build:styles && npm run build:static",
    "build:code": "tsc && tsc-alias -p tsconfig.json",
    "build:static": "node build/cpx.js",
    "build:styles": "sass --no-source-map src/styles/gurps.scss:dist/styles/gurps.css",
    "clean": "node build/clean.js",
    "dev": "npm run clean && npm run watch",
    "format": "prettier --write .",
    "format:check": "prettier --check .",
    "gen:actor-methods": "node dev/scripts/generate-actor-methods.mjs",
    "handlebars": "handlebars",
    "lint": "eslint .",
    "lint:fix": "eslint . --fix",
    "prepare": "husky",
    "tdd": "NODE_OPTIONS=\"--experimental-vm-modules --disable-warning=ExperimentalWarning\" jest --coverage --config=jest.config.mjs",
    "test": "NODE_OPTIONS=\"--experimental-vm-modules --disable-warning=ExperimentalWarning\" jest --config=jest.config.mjs",
    "typecheck": "tsc --noEmit",
    "verify": "npm run format:check && npm run lint && npm run typecheck && npm run test",
    "watch": "node build/watch.mjs",
    "watch:code": "tsc-watch -p tsconfig.json --onSuccess \"tsc-alias -p tsconfig.json\"",
    "watch:static": "node build/cpx.js --watch",
    "watch:styles": "sass --watch --update src/styles/gurps.scss:dist/styles/gurps.css"
  },
  "type": "module",
  "version": "1.0.0"
}
