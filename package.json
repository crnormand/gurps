{
  "name": "gurps",
  "version": "0.18.0",
  "description": "NaN's GURPS Game Aid",
  "type": "module",
  "scripts": {
    "test": "jest --coverage",
    "tdd": "jest --coverage",
    "handlebars": "handlebars",
    "prettier": "prettier --write .",
    "clean": "rimraf dist",
    "build": "run-s clean build:code build:styles copy-assets",
    "build:code": "tsc || true",
    "build:styles": "sass --no-source-map --style=compressed gurps.scss:dist/gurps.css",
    "dev": "run-s clean watch",
    "watch": "run-p wach:styles watch:code copy-assets",
    "watch:code": "tsc-watch --onSuccess \"npm run copy-assets\"",
    "wach:styles": "sass --watch --update --style=expanded gurps.scss:dist/gurps.css",
    "copy-assets": "cpx 'scripts/**/*' dist/scripts && cpx 'lang/**/*' dist/lang && cpx 'templates/**/*' dist/templates && cpx 'styles/**/*' dist/styles && cpx 'assets/**/*' dist/assets && cpx 'icons/**/*' dist/icons && cpx 'exportutils/**/*' dist/exportutils && cpx 'ui/**/*' dist/ui && cpx 'changelog.md' dist/ && cpx 'LICENSE.txt' dist/ && cpx 'README.md' dist/ && cpx 'system.json' dist/ && cpx 'template.json' dist/ && cpx 'utils/*.*/*' dist/utils"
  },
  "devDependencies": {
    "@babel/core": "^7.26.0",
    "@babel/preset-env": "^7.26.0",
    "@types/jest": "^29.5.14",
    "@types/jquery": "^3.5.32",
    "@types/node": "^22.14.1",
    "autoprefixer": "^10.4.21",
    "babel-jest": "^29.7.0",
    "cpx": "^1.5.0",
    "eslint": "^8.57.1",
    "eslint-plugin-deprecation": "^3.0.0",
    "fvtt-types": "github:League-of-Foundry-Developers/foundry-vtt-types#documents-v2",
    "handlebars": "^4.7.7",
    "jest": "^29.7.0",
    "npm-run-all2": "^7.0.2",
    "prettier": "^3.5.3",
    "rimraf": "^6.0.1",
    "sass": "^1.87.0",
    "tsc-watch": "^6.2.1",
    "typescript": "^5.8.3"
  },
  "overrides": {
    "@pixi/utils": {
      "@types/earcut": "3.0.0"
    }
  }
}
