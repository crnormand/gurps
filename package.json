		"jest-junit": "^15.0.0",
		"lint-staged": "^13.1.1",
		"prettier": "^2.8.3",
		"rollup": "^2.79.1",
		"ts-jest": "^29.0.5",
		"tslib": "^2.5.0",
		"typescript": "^4.9.5",
		"uuid": "^8.3.2",
		"vinyl-buffer": "^1.0.1",
		"vinyl-source-stream": "^2.0.0",
