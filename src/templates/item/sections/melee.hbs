<div id="melee" class="weapon-list">
	<div class="header usage">{{localize "gurps.character.melee.usage"}}</div>
	<div class="header level">{{localize "gurps.character.melee.level"}}</div>
	<div class="header parry">{{localize "gurps.character.melee.parry"}}</div>
	<div class="header block">{{localize "gurps.character.melee.block"}}</div>
	<div class="header damage">{{localize "gurps.character.melee.damage"}}</div>
	<div class="header reach">{{localize "gurps.character.melee.reach"}}</div>
	<div class="header st">{{localize "gurps.character.melee.st"}}</div>
	{{#each meleeWeapons}}
	<div class="usage" data-index="{{this.index}}">
		<div class="name">
			{{this.usage}}
		</div>
		{{>actor/character/sections/item-notes}}
	</div>
	<div data-index="{{this.index}}" class="level">
		{{this.level}}</div>
	<div data-index="{{this.index}}" class="parry rollable">{{this.fastResolvedParry}}</div>
	<div data-index="{{this.index}}" class="block rollable">{{this.fastResolvedBlock}}</div>
	<div data-index="{{this.index}}" class="damage rollable">
		{{this.fastResolvedDamage}}</div>
	<div data-index="{{this.index}}" class="reach">{{this.reach}}</div>
	<div data-index="{{this.index}}" class="st">{{this.st}}</div>
	{{/each}}
</div>
