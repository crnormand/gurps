<div
	class="desc item{{#if this.isContainer}} container{{/if}} other"
	data-item-id="{{ this.id }}"
	{{{indent this.parents.length}}}
>
	<div class="dropdown">
		{{#if (eq this.type "skill_container")}}
		{{#if this.open}}
		{{>actor/character/sections/dropdown-open}}
		{{else}}
		{{>actor/character/sections/dropdown-closed}}
		{{/if}}
		{{/if}}
	</div>
	<div class="name">
		{{this.formattedName}}
	</div>
	{{>actor/character/sections/item-notes}}
</div>
{{#if @root/inCompendium}}
<div class="difficulty">{{this.difficulty}}</div>
<div class="tags">{{join this.tags ", "}}</div>
{{else}}
{{#if this.isContainer}}
<div class="level"></div>
<div class="rsl"></div>
{{else}}
<div data-item-id="{{this.id}}" data-type="skill" class="level rollable {{effective this}}">{{this.effectiveLevel}}</div>
<div data-item-id="{{this.id}}" data-type="skill_rsl" class="rsl rollable {{effective this}}">{{this.relativeLevel}}</div>
{{/if}}
<div class="points">{{this.adjustedPoints}}</div>
{{/if}}
<div class="reference">{{{ref this.reference}}}</div>
{{#if this.open}}
{{#each (sort this.children "sort")}}
{{>actor/character/sections/skill}}
{{/each}}
{{/if}}
