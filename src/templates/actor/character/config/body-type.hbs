<div class="add">
	<a class="gcs-circled-add add" data-path="{{path}}" data-type="locations"></a>
	{{#if actor}}
	<a class="gcs-reset reset-all" data-type="locations"></a>
	<div>{{localize "gurps.settings.reset_all"}}</div>
	{{/if}}
</div>
<div class="fieldblock">
	<div class="label">{{localize "gurps.character.settings.body_type.name"}}</div>
	<div class="field">
		<input type="text" name="{{path}}.name" value="{{this.name}}" data-dtype="String" />
	</div>
	<div class="label">{{localize "gurps.character.settings.body_type.roll"}}</div>
	<div class="field">
		<input type="text" name="{{path}}.roll" value="{{this.roll}}" data-dtype="String" />
	</div>
	<div class="item-list">
		{{#each this.locations}}
		{{>actor/character/config/location path=(concat ../path ".locations") l=../this.locations.length}}
		{{/each}}
	</div>
</div>
