<div id="primary-attributes">
	<div class="header">{{localize "gurps.character.primary_attributes"}}</div>
	<div class="fieldblock3">
		<div class="points">[{{system.attributes.ST.points}}]</div>
		<div data-id="ST" data-type="attribute" class="field rollable">
			<input name="system.attributes.ST.import" class="input number" type="text" data-dtype="Number"
				value="{{system.attributes.ST.import}}" {{{disabled (not ../editing)}}}
				style="min-width: {{length system.attributes.ST.import }}ch;" />
		</div>
		<div class="label">{{localize "gurps.static.st"}}</div>
		<div class="points">[{{system.attributes.DX.points}}]</div>
		<div data-id="DX" data-type="attribute" class="field rollable">
			<input name="system.attributes.DX.import" class="input number" type="text" data-dtype="Number"
