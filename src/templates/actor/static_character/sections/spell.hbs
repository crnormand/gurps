{{#unless this.isCollapsed}}
<div class="desc item" data-item-id="{{this.itemid}}" style="padding-left: calc({{this.indent}} * 12px + 6px)">
	<div class="dropdown">
		{{#if this.hasContains }}
		<i class="dropdown-toggle open gcs-circled-chevron-down" data-key="system.spells.{{@key}}"></i>
		{{/if}}
		{{#if this.hasCollapsed }}
		<i class="dropdown-toggle closed gcs-circled-chevron-right" data-key="system.spells.{{@key}}"></i>
		{{/if}}
	</div>
	<div class="name">{{ this.name }} {{#if this.itemid}}<i class="fas fa-star tooltip gga-item"></i>{{/if}}</div>
	<div class="item-notes">
		{{this.notes}}
		{{staticSpellValues this}}
	</div>
</div>
<div data-item-id="{{@key}}" data-type="spell" class="level rollable">{{this.import}}</div>
<div data-item-id="{{@key}}" data-type="spell_rsl" class="rsl rollable">{{this.relativelevel}}</div>
<div class="points">{{this.points}}</div>
<div class="reference">{{{ref this.pageref}}}</div>
{{/unless}}
