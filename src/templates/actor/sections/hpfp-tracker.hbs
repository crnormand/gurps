<div class='tracked-resource {{#unless name}} inactive {{/unless}}' data-gurps-resource='{{name}}'>
  {{> resource-controls editable=false}}
  <div class='condition-block tooltip-wrapper'>
    <div class='tooltip condition {{hpFpCondition name resource "style" }}'>{{i18n (hpFpCondition name resource 'label')}}
      {{#if (eq name 'FP')}}
      <i class='fas fa-lungs {{optionSetStyle testcondition}}' data-onethird='{{condition}}'></i>
      {{else}}
      <i class='fas fa-heartbeat {{optionSetStyle testcondition}}' data-onethird='{{condition}}'></i>
      {{/if}}
      <span class="tooltiptext">
        <div class="fieldblock">
          {{#hpFpBreakpoints name resource}}
            <div class="field condensed noedit">{{breakpoint}}</div>
            <div class="label {{style}}">{{label}}</div>
          {{/hpFpBreakpoints}}
        </div>
      </span>
    </div>
  </div>
  <div class='basic-value fieldblock3'>
    <div class="points">{{#unless compact}}[{{resource.points}}]{{/unless}}</div>
    <div class='field'>{{resource.max}}</div>
    <div class='label'>{{i18n "GURPS.basic"}}</div>
  </div>
</div> <!-- end of combat-hit -->