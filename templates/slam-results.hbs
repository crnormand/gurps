<div class='roll-message gga-chat-message'>
  <div class='prefix'>
    {{attacker}}
    <i>{{localize 'GURPS.slams'}} <i class='subtle fas fa-align-right'></i><i class='fas fa-running'></i></i>
    {{target}}.
  </div>
  <div>
    <ul class='modifier-list'>
      {{#if isAoAStrong}}
        <li>+2 {{localize 'GURPS.slamAOAStrong'}}</li>
      {{/if}}
      {{#if shieldDB}}
        <li>+{{shieldDB}} {{localize 'GURPS.slamForShieldDB'}} [PDF:{{localize 'GURPS.pdfShieldRush'}}]</li>
      {{/if}}
    </ul>
  </div>
  <div class='roll-result'>{{result}}</div>
  <div>
    <div class='gga-group collapsible-content'>
      <div class='grid gurps-3col results-table content-inner'>
        {{#if useDFRPGRules}}
          <div>{{attacker}}</div>
          <div>{{attackerDice.dice}}d{{#if attackerDice.adds}}{{{displayNumber attackerDice.adds}}}{{/if}}</div>
          <div>{{localize 'GURPS.Dice'}}</div>
          <div></div>
          <div>{{attackerResult}}</div>
          <div>= {{attackerExplain}}</div>

          <div>{{target}}</div>
          <div>{{targetDice.dice}}d{{#if targetDice.adds}}{{{displayNumber targetDice.adds}}}{{/if}}</div>
          <div>{{localize 'GURPS.Dice'}}</div>
          <div></div>
          <div>{{targetResult}}</div>
          <div>= {{targetExplain}}</div>
        {{else}}
          <div>{{attacker}}</div>
          <div>{{attackerRaw}}</div>
          <div>
            =
            {{localize 'GURPS.HP'}}
            ({{attackerHp}}) &times;
            {{localize 'GURPS.slamVelocity'}}
            ({{relativeSpeed}}) &divide; 100
          </div>

          <div></div>
          <div>{{attackerDice.dice}}d{{#if attackerDice.adds}}{{{displayNumber attackerDice.adds}}}{{/if}}</div>
          <div>{{localize 'GURPS.Dice'}}</div>

          <div></div>
          <div>{{attackerResult}}</div>
          <div>= {{attackerExplain}}</div>

          <div>{{target}}</div>
          <div>{{targetRaw}}</div>
          <div>
            =
            {{localize 'GURPS.HP'}}
            ({{targetHp}}) &times;
            {{localize 'GURPS.slamVelocity'}}
            ({{relativeSpeed}}) &divide; 100
          </div>

          <div></div>
          <div>{{targetDice.dice}}d{{#if targetDice.adds}}{{{displayNumber targetDice.adds}}}{{/if}}</div>
          <div>{{localize 'GURPS.Dice'}}</div>

          <div></div>
          <div>{{targetResult}}</div>
          <div>= {{targetExplain}}</div>
        {{/if}}
      </div>
    </div>
  </div>
</div>
