  <div class="prefix">
    {{localize "GURPS.chatShock" name=name modifier=modifier}} ([PDF:{{localize "GURPS.pdfShock"}}]).
  </div>
  <hr />
  <div class="roll-result">
    ["{{localize "GURPS.shockPenaltyNextTurnOnly" name=name modifier=modifier}}" {{button}}]
