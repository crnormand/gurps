      <li>{{{localize "GURPS.highPainThresholdNoPenalty"}}} ([PDF:{{localize "GURPS.pdfHPT"}}]).</li>
      <li>{{{localize "GURPS.lowPainThresholdDoubles"}}} ([PDF:{{localize "GURPS.pdfLPT"}}]).</li>
    </ul>

    <div class="aside">
      {{{localize "GURPS.effectsNotApplicableDefenses"}}} {{{localize "GURPS.effectsTemporaryAttributePenalties"}}}
      ([PDF:{{localize "GURPS.pdfTempAttribPenalties"}}]).
    </div>
