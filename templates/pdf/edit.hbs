{{#unless v13}}
<form class="{{cssClass}} flexcol" autocomplete="off">
	{{> journalEntryPageHeader}}
{{/unless}}
<section>

  {{#if document.src}}
    <iframe src='scripts/pdfjs/web/viewer.html?{{params}}#page={{sum document.system.offset 5}}'></iframe>
  {{/if}}

  <div class='form-group'>
    <label>{{localize 'JOURNALENTRYPAGE.PDFSource'}}</label>
    <div class='form-fields'>
      <file-picker type='text' name='src' accept='application/pdf, image/*' class='file-picker' value='{{document.src}}'>
        {{!-- <input class='image' type='text' name='src' placeholder='path/to/file.pdf' value='{{document.src}}' /> --}}
        {{!-- <button
          class='fa-solid fa-file-import fa-fw icon'
          type='button'
          data-tooltip='FILES.BrowseTooltip'
          aria-label='FILES.BrowseTooltip'
          tabindex='-1'
        ></button> --}}
      </file-picker>
    </div>
  </div>
  <div class='form-group'>
    <label>{{localize 'GURPS.pdfOffset'}}</label>
    <div class='form-fields'>
      <input
        type='number'
        name='system.offset'
        placeholder='Offset (e.g. -5, 0, 2)'
        value='{{document.system.offset}}'
      />
    </div>
  </div>
  <div class='form-group'>When changing this value, the PDF will automatically adjust to what should be page 5</div>
  <div class='form-group'>
    <label>{{localize 'GURPS.pdfCode'}}</label>
    <div class='form-fields'>
      <input type='text' name='system.code' placeholder="PDF Code (e.g. 'B')" value='{{document.system.code}}' />
    </div>
  </div>

</section>
{{#unless v13}}
  {{> journalEntryPageFooter}}
</form>
{{/unless}}
