<section style='overflow-y: auto'>
  <div class='form-group picker'>
    <label>{{localize 'JOURNALENTRYPAGE.PDFSource'}}</label>
    <div class='form-fields'>
      <file-picker type='text' name='src' value='{{document.src}}'>
      </file-picker>
    </div>
  </div>
  <div class='form-group'>
    <label>{{localize 'GURPS.pdf.offset'}}</label>
    <div class='form-fields'>
      <input
        type='number'
        name='system.offset'
        placeholder='{{localize "GURPS.pdf.offsetPlaceholder"}}'
        value='{{document.system.offset}}'
      />
    </div>
  </div>
  <div class='form-group'>{{localize 'GURPS.pdf.offsetChangeHint'}}</div>
  <div class='form-group'>
    <label>{{localize 'GURPS.pdf.code'}}</label>
    <div class='form-fields'>
      <input
        type='text'
        name='system.code'
        placeholder='{{localize "GURPS.pdf.codePlaceholder"}}'
        value='{{document.system.code}}'
      />
    </div>
  </div>

  {{#if document.src}}
    <div class='form-group'>
      <iframe src='scripts/pdfjs/web/viewer.html?{{params}}#page={{pageNumber}}'></iframe>
    </div>
  {{/if}}
</section>