<div id='reactions' class='gga-table'>
  <div class='itemmenu header' readonly></div>
  <div class='modifier header gga-right'>{{localize 'GURPS.modifier'}}</div>
  <div class='situation header'>
    <div class='headermenu' data-key='system.reactions'>
      <span>{{localize 'GURPS.reaction'}}</span>
      {{#if isEditing}}
        <i class='fas fa-caret-square-down'></i>
      {{/if}}
    </div>
  </div>

  {{#each system.reactions}}
    {{#if ../isEditing}}
      <div class='itemmenu reactmenu' data-key='system.reactions.{{@key}}'>
        <i class='fas fa-times'></i>
      </div>
      <div class='modifier gga-right'>
        <input name='system.reactions.{{@key}}.modifier' class='gcs-input-sm4' type='text' value='{{modifier}}' />
      </div>
      <div class='situation'>
        <input name='system.reactions.{{@key}}.situation' class='gcs-input' type='text' value='{{situation}}' />
      </div>
    {{else}}
      <div class='itemmenu' readonly></div>
      <div class='modifier gmod gga-right' data-name='Reaction {{situation}}' data-otf='{{displayNumber modifier}} {{situation}}'>{{{displayNumber modifier}}}</div>
      <div class='situation reactdraggable' data-key='system.reactions.{{@key}}'>
        {{{gurpslink situation}}}
      </div>
    {{/if}}
  {{/each}}
</div>