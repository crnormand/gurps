<div id='conditionalmods' class='gga-table'>
  <div class='itemmenu header' readonly></div>
  <div class='modifier header gga-right'>{{localize 'GURPS.modifier'}}</div>
  <div class='situation header'>
    <div class='headermenu'>
      <span>{{localize "GURPS.conditionalMods"}}</span>
      {{#if isEditing}}
        <i class='fas fa-caret-square-down'></i>
      {{/if}}
    </div>
  </div>

  {{#each system.conditionalmods}}
    {{#if ../isEditing}}
      <div class='itemmenu condmodmenu' data-key='system.conditionalmods.{{@key}}'>
        <i class='fas fa-times'></i>
      </div>
      <div class='modifier gga-right'>
        <input
          name='system.conditionalmods.{{@key}}.modifier'
          class='gcs-input-sm4'
          type='text'
          value='{{this.modifier}}'
        />
      </div>
      <div class='situation'>
        <input name='system.conditionalmods.{{@key}}.situation' class='gcs-input' type='text' value='{{this.situation}}' />
      </div>
    {{else}}
      <div class='itemmenu' readonly></div>
      <div class='modifier gmod gga-right' data-name='Modifier {{situation}}' data-otf='{{displayNumber modifier}} {{this.situation}}'>{{{displayNumber modifier}}}</div>
      <div class='situation condmoddraggable' data-key='system.conditionalmods.{{@key}}'>
        {{{gurpslink this.situation}}}
      </div>
    {{/if}}
  {{/each}}
</div>