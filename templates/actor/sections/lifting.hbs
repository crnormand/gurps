<div id='lifting' class='gga-tableheader'>
  <div class='header'>{{localize 'GURPS.liftingAndMovingThings'}}</div>
  <div class='lift gga-right'>
    {{#if isEditing}}
      <input
        name='system.liftingmoving.basiclift'
        class='gcs-input-4'
        type='text'
        value='{{system.liftingmoving.basiclift}}'
      />
    {{else}}
      {{displayDecimal system.liftingmoving.basiclift number=1 removeZeros=true}}
    {{/if}}
  </div>
  <div class='liftdesc'>
    {{localize 'GURPS.basicLift'}}
  </div>
  <div class='lift gga-right'>
    {{#if isEditing}}
      <input
        name='system.liftingmoving.onehandedlift'
        class='gcs-input-4'
        type='text'
        value='{{system.liftingmoving.onehandedlift}}'
      />
    {{else}}
      {{displayDecimal system.liftingmoving.onehandedlift number=1 removeZeros=true}}
    {{/if}}
  </div>
  <div class='liftdesc'>
    {{localize 'GURPS.oneHandLift'}}
  </div>
  <div class='lift gga-right'>
    {{#if isEditing}}
      <input
        name='system.liftingmoving.twohandedlift'
        class='gcs-input-4'
        type='text'
        value='{{system.liftingmoving.twohandedlift}}'
      />
    {{else}}
      {{displayDecimal system.liftingmoving.twohandedlift number=1 removeZeros=true}}
    {{/if}}
  </div>
  <div class='liftdesc'>
    {{localize 'GURPS.twoHandLift'}}
  </div>
  <div class='lift gga-right'>
    {{#if isEditing}}
      <input name='system.liftingmoving.shove' class='gcs-input-4' type='text' value='{{system.liftingmoving.shove}}' />
    {{else}}
      {{displayDecimal system.liftingmoving.shove number=1 removeZeros=true}}
    {{/if}}
  </div>
  <div class='liftdesc'>
    {{localize 'GURPS.shoveAndKnockOver'}}
  </div>
  {{#if system.liftingmoving.runningshove}}
    <div class='lift gga-right'>
      {{#if isEditing}}
        <input
          name='system.liftingmoving.runningshove'
          class='gcs-input-4'
          type='text'
          value='{{system.liftingmoving.runningshove}}'
        />
      {{else}}
        {{displayDecimal system.liftingmoving.runningshove number=1 removeZeros=true}}
      {{/if}}
    </div>
    <div class='liftdesc'>
      {{localize 'GURPS.runningShoveAndKnockOver'}}
    </div>
  {{/if}}
  <div class='lift gga-right'>
    {{#if isEditing}}
      <input
        name='system.liftingmoving.carryonback'
        class='gcs-input-4'
        type='text'
        value='{{system.liftingmoving.carryonback}}'
      />
    {{else}}
      {{displayDecimal system.liftingmoving.carryonback number=1 removeZeros=true}}
    {{/if}}
  </div>
  <div class='liftdesc'>
    {{localize 'GURPS.carryOnBack'}}
  </div>
  <div class='lift gga-right'>
    {{#if isEditing}}
      <input
        name='system.liftingmoving.shiftslightly'
        class='gcs-input-4'
        type='text'
        value='{{system.liftingmoving.shiftslightly}}'
      />
    {{else}}
      {{displayDecimal system.liftingmoving.shiftslightly number=1 removeZeros=true}}
    {{/if}}
  </div>
  <div class='liftdesc'>
    {{localize 'GURPS.shiftSlightly'}}
  </div>
</div>