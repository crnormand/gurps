<form class='{{cssClass}}' autocomplete='off' style='scroll-padding-top: 5px;'>
  <div id='sheet' class='gurpsactorsheet reducedMode'>
    <div id='personal'>
      {{>portrait}}
      {{>identity}}
      {{>description}}
      {{>points}}
    </div>
    <div id='stats'>
      <div id='attributes'>
        {{>basic-attributes}}
        {{>secondary-attributes}}
      </div>
      <div id='hp-fp'>
        {{#if useCI}}
          {{>conditional-injury}}
        {{else}}
          {{>hpfp-tracker
            name='HP'
            resource=system.HP
            label='GURPS.attributesHPNAME'
            editable=false
            condition='reeling'
            testcondition=system.conditions.reeling
          }}
        {{/if}}
        {{>hpfp-tracker
          name='FP'
          resource=system.FP
          label='GURPS.attributesFPNAME'
          editable=false
          condition='exhausted'
          testcondition=system.conditions.exhausted
        }}
      </div>

      {{>conditions}}
    </div> 
    {{!-- end of stats --}}

    {{#if (or (notEmpty system.reactions) (notEmpty system.conditionalmods))}}
      <div id='other' style='display: flex; flex-flow: row nowrap;'>
        {{#if (notEmpty system.reactions)}}{{>reactions}}{{/if}}
        {{#if (notEmpty system.conditionalmods)}}{{>conditionalmods}}{{/if}}
      </div>
    {{/if}}

    {{>trackers}}

    {{#if (notEmpty system.melee)}}
      {{>melee}}
    {{/if}}

    {{#if (notEmpty system.ranged)}}
      {{>ranged}}
    {{/if}}

    {{#if (or (notEmpty system.skills) (notEmpty system.ads))}}
      <div id='ads-skills'>
        {{#if (notEmpty system.ads)}}{{>advantages}}{{/if}}
        {{#if (notEmpty system.skills)}}{{>skills}}{{/if}}
      </div>
    {{/if}}

    {{#if (notEmpty system.spells)}}
      {{>spells}}
    {{/if}}

    {{#if (notEmpty system.equipment.carried)}}
      {{>equipment container='carried' data=this.data}}
    {{/if}}

    {{#if (notEmpty system.equipment.other)}}
      {{>equipment container='other' data=this.data}}
    {{/if}}

    {{>notes}}
  </div>
  {{>footer}}
  {{#if navigateBar.visible}}
    <div class='navigate-area'>
      <input id='navigate-toggle-{{_id}}' class='toggle offscreen-only' type='checkbox' />
      <div class='navigate-bar'>
        <label class='navigation-view' for='navigate-toggle-{{_id}}'><span class='icon'></span></label>
        <div class='navigate-container'>
          <div class='navigation-link' data-value='personal'>TOP</div>
          <div class='navigation-link' data-value='stats'>{{i18n 'GURPS.statsTab'}}</div>
          {{#if navigateBar.hasMelee}}
            <div class='navigation-link' data-value='melee'>{{i18n 'GURPS.melee'}}</div>
          {{/if}}
          {{#if navigateBar.hasRanged}}
            <div class='navigation-link' data-value='ranged'>{{i18n 'GURPS.ranged'}}</div>
          {{/if}}
          <div class='navigation-link' data-value='advantages'>{{i18n 'GURPS.pointsAdvantages'}}</div>
          <div class='navigation-link' data-value='skills'>{{i18n 'GURPS.skillsTab'}}</div>
          {{#if navigateBar.hasSpells}}
            <div class='navigation-link' data-value='spells'>{{i18n 'GURPS.spellsTab'}}</div>
          {{/if}}
          <div class='navigation-link' data-value='equipmentcarried'>{{i18n 'GURPS.equipment'}}</div>
          {{#if navigateBar.hasOther}}
            <div class='navigation-link' data-value='equipmentother'>OTHER</div>
          {{/if}}
          <div class='navigation-link' data-value='notes'>{{i18n 'GURPS.notes'}}</div>
        </div>
      </div>
    </div>
  {{/if}}
</form>
