{{#*inline ".pointTotal"}}
  <div class="gcs-point-total">
    <span class="gcs-point-total-label">{{field.label}}</span>
    {{formInput field value=value localize=true}}
  </div>
{{/inline}}

<section class="gcs-header">
  <div class="gcs-portrait gcs-section">
    <div class="gcs-section-header">{{localize "GURPS.actor.gcsSheet.portrait"}}</div>
      <img
        src='{{actor.img}}'
        data-action='editImage'
      />
  </div>
  <div class="gcs-identity gcs-section">
    <div class="gcs-section-header">{{localize "GURPS.actor.gcsSheet.identity"}}</div>
    <div class="gcs-field-rows">
      {{formField fields.name value=actor.name localize=true}}
      {{formField systemFields.traits.title value=systemSource.traits.title localize=true}}
    </div>
  </div>
  <div class="gcs-miscellaneous gcs-section">
    <div class="gcs-section-header">{{localize "GURPS.actor.gcsSheet.miscellaneous"}}</div>
    <div class="gcs-field-rows">
      {{formField systemFields.traits.createdon value=systemSource.traits.createdon localize=true}}
      {{formField systemFields.traits.modifiedon value=systemSource.traits.modifiedon localize=true}}
    </div>
  </div>
  <div class="gcs-description gcs-section">
    <div class="gcs-section-header">{{localize "GURPS.actor.gcsSheet.description"}}</div>
    <div class="gcs-field-cols">
      <div class="gcs-field-rows">
        {{formField systemFields.traits.gender value=systemSource.traits.gender localize=true}}
        {{formField systemFields.traits.age value=systemSource.traits.age localize=true}}
        {{formField systemFields.traits.birthday value=systemSource.traits.birthday localize=true}}
        {{formField systemFields.traits.religion value=systemSource.traits.religion localize=true}}
      </div>
      <div class="gcs-field-rows">
        {{formField systemFields.traits.height value=systemSource.traits.height localize=true}}
        {{formField systemFields.traits.weight value=systemSource.traits.weight localize=true}}
        {{formField systemFields.traits.sizemod value=systemSource.traits.sizemod localize=true}}
        {{formField systemFields.traits.techlevel value=systemSource.traits.techlevel localize=true}}
      </div>
      <div class="gcs-field-rows">
        {{formField systemFields.traits.hair value=systemSource.traits.hair localize=true}}
        {{formField systemFields.traits.eyes value=systemSource.traits.eyes localize=true}}
        {{formField systemFields.traits.skin value=systemSource.traits.skin localize=true}}
        {{formField systemFields.traits.hand value=systemSource.traits.hand localize=true}}
      </div>
    </div>
  </div>
  <div class="gcs-point-totals gcs-section">
    <div class="gcs-section-header">{{localize "GURPS.actor.gcsSheet.pointTotals"}}</div>
    <div class="gcs-point-total-rows">
      {{> ".pointTotal" field=systemFields.totalpoints.unspent value=systemSource.totalpoints.unspent}}
      {{> ".pointTotal" field=systemFields.totalpoints.race value=systemSource.totalpoints.race}}
      {{> ".pointTotal" field=systemFields.totalpoints.attributes value=systemSource.totalpoints.attributes}}
      {{> ".pointTotal" field=systemFields.totalpoints.ads value=systemSource.totalpoints.ads}}
      {{> ".pointTotal" field=systemFields.totalpoints.disads value=systemSource.totalpoints.disads}}
      {{> ".pointTotal" field=systemFields.totalpoints.quirks value=systemSource.totalpoints.quirks}}
      {{> ".pointTotal" field=systemFields.totalpoints.skills value=systemSource.totalpoints.skills}}
      {{> ".pointTotal" field=systemFields.totalpoints.spells value=systemSource.totalpoints.spells}}
    </div>
  </div>
</section>
